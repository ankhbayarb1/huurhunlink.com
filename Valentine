<script>
// ======= –ó“Ø—Ä—Ö “Ø“Ø—Å–≥—ç—Ö =======
const heartsDiv=document.querySelector(".hearts");
const heartEmojis=["üíñ","üíï","üíò","üíó","üíû"];
const colors=["#ff4d6d","#ff85a2","#ffb3c6","#ffccd9","#ffa3b1"];
for(let i=0;i<30;i++){
  let span=document.createElement("span");
  span.innerText=heartEmojis[Math.floor(Math.random()*heartEmojis.length)];
  span.style.left=Math.random()*100+"vw";
  span.style.animationDuration=(5+Math.random()*7)+"s";
  span.style.fontSize=(20+Math.random()*30)+"px";
  span.style.color=colors[Math.floor(Math.random()*colors.length)];
  heartsDiv.appendChild(span);
}

// ======= –¢–æ–≤—á–ª—É—É—Ä—É—É–¥ =======
const yesBtn=document.getElementById("yesBtn");
const noBtn=document.getElementById("noBtn");
const modal=document.getElementById("feedbackModal");
const submitBtn=document.getElementById("submitFeedback");
const feedbackText=document.getElementById("feedbackText");

yesBtn.onclick=()=>{
  modal.style.display="block";
};

// NO —Ç–æ–≤—á
noBtn.onclick=()=>{
  noBtn.innerText="–º—ç–¥—ç—ç–∂ üíò";
  noBtn.style.background="#ff4d6d";
  noBtn.style.color="white";
  noBtn.onclick=()=>{
    modal.style.display="block";
  };
};

// ======= Feedback submit =======
submitBtn.onclick=()=>{
  const message=feedbackText.value || "–•–æ–æ—Å–æ–Ω";
  notify(message);
  alert("–ë–∞—è—Ä–ª–∞–ª–∞–∞ üíñ –¢–∞–Ω—ã –±–æ–¥–æ–ª –∏–ª–≥—ç—ç–≥–¥–ª—ç—ç!");
  modal.style.display="none";
};

// ======= –ú—ç–¥—ç–≥–¥—ç—Ö —Ñ—É–Ω–∫—Ü =======
function notify(msg){
  fetch("https://formsubmit.co/ajax/YOUR_EMAIL@gmail.com",{
    method:"POST",
    headers:{"Content-Type":"application/json"},
    body:JSON.stringify({message:`Valentine feedback: ${msg}`})
  });
}

// ======= Exit message =======
window.addEventListener("beforeunload",function(e){
  const msg="–•–∞–π—Ä—ã–Ω —Å—É–¥–∞–ª–≥–∞–∞–Ω–¥ –æ—Ä—Å–æ–Ω–¥ –±–∞—è—Ä–ª–∞–ª–∞–∞ –•”®”®–†–•”®–ù”®”® üíñ";
  e.preventDefault();
  e.returnValue=msg;
  return msg;
});
